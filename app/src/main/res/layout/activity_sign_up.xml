<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dsm.yeonso.SignUpActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signUpActivity_editText_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="아이디"
            android:inputType="textEmailAddress" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signUpActivity_editText_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signUpActivity_editText_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signUpActivity_editText_pw_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="비밀번호 확인" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/signUpActivity_editText_eamil_codeCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이메일 인증코드" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/signUpActivity_button_email_authentication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일 인증" />

    <Button
        android:id="@+id/signUpActivity_button_email_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증코드 확인" />

    <Button
        android:id="@+id/signUpActivity_button_signUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입 완료" />

</LinearLayout>
